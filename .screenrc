
# C-a :source .screenrc

termcapinfo xterm* ti@:te@
startup_message off
vbell off
autodetach on
altscreen on
#shelltitle "$ |bash"
defscrollback 10000
defutf8 on
nonblock on

#escape ``
#escape `e

# BIND ESCAPE TO F11!
# bindkey -k F1 command

hardstatus alwayslastline                                                                                                                          
hardstatus string '%{= kw}[%= %{= kw}%?%-Lw%?%{= kW}%n*%f %t%?%?%{= kw}%?%+Lw%?%?%= ][ %{r}%l%{w} ]%{w}[%{r} %d/%m/%y %C %A %{w}]%{w}'
