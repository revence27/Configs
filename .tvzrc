# vim: syntax=zsh

export set DLDIR="$DESKTOP/vids"
export set YTDL="youtube-dl"
export set TERMBACKGROUND=dark
echo $COLORTERM | grep xfce4-terminal 2>&1 > /dev/null && export set TERMBACKGROUND=dark

export set DESKTOPSESSIONNAME=worksess
export set WEBWORKDIR="$HACKS/BitCoinGroup/webapp"
export set EMBWORKDIR="$HACKS/pivot/embedded"
export set MAINWORKDIR=$WEBWORKDIR

alias yout='youtube-dl'

work_panel_setup_routine()
{
  tmux new-window -n 'Work' -c $1
  tmux send-keys -t 'Work.0' "vi -S .ide.vim" C-m
}

mailbox_setup_routine()
{
  tmux split-window -t 'Desktop.0' -h -p 62
  tmux send-keys -t 'Desktop.0' "mutt" C-m I
}

newsreader_setup_routine()
{
  tmux split-window -t 'Desktop.2' -p 40
  tmux send-keys -t 'Desktop.1' "w3m rt.com/news && weechat" C-m
}

network_monitor_setup_routine()
{
  tmux split-window -t 'Desktop.3' -h -p 44
  tmux resize-pane -t 'Desktop.4' -Z
  tmux send-keys -t 'Desktop.4' "bmon -p wlan0" C-m
  tmux resize-pane -t 'Desktop.4' -Z
}

music_player_setup_routine()
{
  tmux split-window -t 'Desktop.1' -p 60
  tmux send-keys -t 'Desktop.1' "macronesia singer" C-m
}

radio_player_setup_routine()
{
  tmux resize-pane -t 'Desktop.2' -Z
  tmux send-keys -t 'Desktop.2' "mocp" C-m
  tmux resize-pane -t 'Desktop.2' -Z
}

workdirectories_routine()
{
  echo $EMBWORKDIR;
}
