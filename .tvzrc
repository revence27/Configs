# vim: syntax=zsh

export set DLDIR="$DESKTOP/yt"
export set YTDL="youtube-dl"
export set TERMBACKGROUND=dark
echo $COLORTERM | grep xfce4-terminal 2>&1 > /dev/null && export set TERMBACKGROUND=light

export set DESKTOPSESSIONNAME=worksess

mailbox_setup_routine()
{
  tmux send-keys -t 'Desktop.1' "mutt" C-m I
}

downloads_setup_routine()
{
  tmux split-window -t 'Desktop.0' -p 15 -c "$DLDIR"
  tmux send-keys -t 'Desktop.1' "$YTDL " C-l
}

newsreader_setup_routine()
{
  tmux send-keys -t 'Desktop.0' C-l 'BitchX' C-m
}

workdirectories_routine()
{
  echo "$HACKS/sundry/septuagintal"
}
